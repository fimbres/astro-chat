---
import { Picture } from '@astrojs/image/components';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Chat App">
	<div class="flex flex-col items-center justify-center px-5 md:px-2">
		<div class="py-10 mt-12">
			<h1 class="font-extrabold text-4xl md:text-6xl text-black text-center">This is my awesome <span class="font-extrabold bg-clip-text text-transparent bg-gradient-to-b from-blue-600 to-violet-500">Chat App.</span></h1>
		</div>
		<Picture src="./hero.png" alt='Hero Image' widths={[600]} fit='cover' aspectRatio={1.2}/>
	</div>
</Layout>
